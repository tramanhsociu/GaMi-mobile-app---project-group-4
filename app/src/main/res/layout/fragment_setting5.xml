<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/kem"
    android:fillViewport="true"
    tools:context="com.example.fragment.SettingFragment5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="150dp">
        <TextView
            android:id="@+id/txtAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Tại sao tài khoản GaMi của tôi bị khóa/ bị giới hạn?"
            android:textColor="@color/gami3"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/sourcesanspro_bold"/>

        <ImageView
            android:id="@+id/imvLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.5dp"
            android:src="@drawable/ic_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtAccount" />
        <TextView
            android:id="@+id/txtDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài khoản của bạn có thể bị khóa bị giới hạn vì một trong các nguyên nhân sau:"
            android:textSize="14sp"
            android:textColor="@color/gami3"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAccount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/sourcesanspro_regular"/>

        <TextView
            android:id="@+id/txtline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Tài khoản vi phạm Điều khoản dịch vụ của Shopee"
            android:textSize="14sp"
            android:textColor="@color/gami3"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/sourcesanspro_regular"/>

        <TextView
            android:id="@+id/txtline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Tên đăng nhập giống với tài khoản chính thức của GaMi, giống hoặc gần giống với các trang thương mại điện tử khác, chưa đường dẫn tới web có hình thức kinh doanh giống với GaMi"
            android:textSize="14sp"
            android:textColor="@color/gami3"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/sourcesanspro_regular"/>
        <LinearLayout
            android:id="@+id/Luuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtline2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_baseline_warning_24" />

            <TextView
                android:id="@+id/txtno3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="Lưu ý:"
                android:textColor="@color/gami2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/sourcesanspro_bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtline1luuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Khi tài khoản của bạn bị khóa/bị giới hạn, bạn sẽ nhận được thông báo khi thực hiện đăng nhập vào tài khoản hoặc một giao dịch nào đó liên quan trên GaMi"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textSize="14sp"
            android:textColor="@color/gami3"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/Luuy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtline2luuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Tài khoản của bạn sẽ bị khóa vĩnh viễn nếu:"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textSize="14sp"
            android:textColor="@color/gami3"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtline1luuy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtsubline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=". Bạn không đưa ra yêu cầu khôi phục tài khoản phù hợp trong vòng 30 ngày kể từ thời điểm lần đầu tiên bạn nhận được thông báo về việc tài khoản bị khóa/bị giới hạn"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textSize="14sp"
            android:textColor="@color/gami3"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@+id/txtline2luuy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtsubline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=". Yêu cầu khôi phục của bạn không được chấp thuận bởi bộ phận Quản lý rủi ro"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textSize="14sp"
            android:textColor="@color/gami3"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@+id/txtsubline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:text="Bài viết này có hữu ích cho bạn không?"
            android:fontFamily="@font/sourcesanspro_bold"
            android:textColor="@color/gami3"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtsubline2" />

        <FrameLayout
            android:id="@+id/btnLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/like_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNote">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="Vâng"
                android:textColor="#4D000000"
                android:textSize="11dp"
                android:fontFamily="@font/sourcesanspro_regular"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnUnlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/like_button"
            app:layout_constraintStart_toEndOf="@+id/btnLike"
            app:layout_constraintTop_toBottomOf="@+id/txtNote">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_unlike" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="Không"
                android:textColor="#4D000000"
                android:textSize="11dp"
                android:fontFamily="@font/sourcesanspro_regular"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>