<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <LinearLayout
        android:id="@+id/linearLayoutLogo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imvLogo"
            android:src="@drawable/ic_logo"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gami"
            android:fontFamily="@font/sourcesanspro_bold"
            android:textColor="@color/gami2"
            android:layout_marginLeft="15dp"
            android:textSize="26sp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imvImage"
        android:src="@drawable/product1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutLogo"
        android:scaleType="center"
        />
    <LinearLayout
        android:id="@+id/linearLayoutReact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/imvImage"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/tim"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1.2k"
            android:gravity="center"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cmt"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="23"/>


    </LinearLayout>

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:text="@string/chitietbaiviet1"

        app:layout_constraintTop_toBottomOf="@+id/linearLayoutReact"
        tools:layout_editor_absoluteX="-30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>